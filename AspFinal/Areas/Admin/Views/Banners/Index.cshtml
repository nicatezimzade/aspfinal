@model List<Banner>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Banners</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Text</th>
                        <th>BgColor</th>
                        <th>Settings</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Banner item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>
                                <div style="width:400px">
                                    @item.Text
                                </div>
                            </td>
                            <td>@item.BgColor</td>
                            <td>
                                <div class="row">
                                    <div class="col-md-4">

                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary mr-1">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </div>
                                    <div class="col-md-4">

                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning mr-1">
                                            <i class="fas fa-fw fa-wrench"></i>
                                        </a>
                                    </div>
                                    <div class="col-md-4">

                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mr-1">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/admin/js/demo/datatables-demo.js"></script>
}