@model Banner
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Edit Banner</h6>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="POST" enctype="multipart/form-data">
            <div class="row">

                <div class="col-md-6 mb-4">
                    <label asp-for="Title"></label>
                    <input type="text" class="form-control" asp-for="Title">
                    <span class="text-danger small" asp-validation-for="Title"></span>
                </div>
                <div class="col-md-6 mb-4">
                    <label asp-for="Text"></label>
                    <input type="text" class="form-control" asp-for="Text">
                    <span class="text-danger small" asp-validation-for="Text"></span>
                </div>                <div class="col-md-6 mb-4">
                    <label asp-for="BgColor"></label>
                    <input type="color" class="form-control" value="@Model.BgColor" asp-for="BgColor">
                    <span class="text-danger small" asp-validation-for="BgColor"></span>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-success">Save</button>
                    <a asp-action="Index" class="btn btn-primary">Go Back</a>
                </div>
            </div>
        </form>
    </div>
</div>


